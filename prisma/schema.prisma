generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Habit {
  id String @id @default(uuid())
  title String
  create_at DateTime

  @@map("habits") //name of table
}

model HabitWeekDays {
  id String @id @default(uuid())
  habit_id String
  week_day Int

  @@unique([habit_id, week_day])
  @@map("habit_week_days")
}

model Day { //vamos ter registros do dia que pelo menos um h√°bito foi completado
  id String @id @default(uuid())
  date DateTime

  @@unique([date])
  @@map("days")
}


model DayHabit {
  id String @id @default(uuid())

  day_id String //gaurda as tabelas de relacionamento
  habit_id String 
 
  @@unique([day_id, habit_id])
  @@map("day_habits")
}
